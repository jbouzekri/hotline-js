extends layout
block append javascripts
    script(src="javascripts/jquery-ui-1.10.4.custom.min.js")
    script(src="/socket.io/socket.io.js")
    script(src="javascripts/desktop.js")
block append content
    header
        nav.nav.navbar-default.navbar-static-top.navbar-inverse
            .container-fluid
                .navbar-header
                    a.navbar-brand(href="#") HotlineJS
                #user-tabs.nav.navbar-nav
                    ul
                ul.nav.navbar-nav.navbar-right
                    li
                        a#reload-state(href="#reload-state")
                            span.glyphicon.glyphicon-repeat
                    li
                        a(href="/admin/toggle-online", id="toggle-online", data-online="#{online}")
                            .state.offline-state(style="#{!online ? '' : 'display:none;'}")
                                span.glyphicon.glyphicon-stop
                                span Offline
                            .state.online-state(style="#{online ? '' : 'display:none;'}")
                                span.glyphicon.glyphicon-play
                                span Online
                    li
                        a(href="/admin/logout")
                            span.glyphicon.glyphicon-off
    .container-fluid
        if debug
            script.
                var debug=true;